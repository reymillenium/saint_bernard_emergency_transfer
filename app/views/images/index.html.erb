<h1>Listado de Imágenes</h1>

<%= link_to 'Agregar Imagen', new_image_path %>

<table>

  <tr>
    <th>ID</th>
    <th>Description</th>
    <th>Likes Counter</th>
  </tr>

  <%- @images.each do |image| %>
    <tr>

      <td style="text-align: center;">
        <!--<a href="#"><%#= image.id %></a>-->
        <%= link_to image.id, edit_image_path(image) %>
      </td>

      <td style="text-align: center;">
        <!--<a href="#"><%#= image.description %></a>-->
        <%= link_to image.description, edit_image_path(image) %>
      </td>

      <td style="text-align: center;">
        <!-- <a href="#"><%#= image.likes_counter %></a>-->
        <%= link_to image.likes_counter, edit_image_path(image) %>
      </td>

    </tr>
  <% end %>

</table>




<div class='container-fluid'>

  <div class='row py-3 px-3'>

    <div class='col-12 col-sm-8'>

      <h3 class=''>Imagenes</h3>

      <table id='employee-table' class="table table-hover">

        <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>Descripción</th>
          <th>Likes</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= image.id %></td>
            <td><%= image.description %></td>
            <td><%= image.likes_counter %></td>
            <td><%= link_to 'Show', image %></td>
            <td><%= link_to 'Edit', edit_image_path(image) %></td>
            <td><%= link_to 'Delete', image, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
        </tbody>

      </table>

      <br>

    </div>

  </div>

</div>



