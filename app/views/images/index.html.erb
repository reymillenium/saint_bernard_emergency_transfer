<h1>Listado de Imágenes</h1>

<%= link_to 'Agregar Imagen', new_image_path %>

<br>
<br>

<div class='container-fluid'>

  <div class='row py-3 px-3'>

    <div class='col-12 col-sm-8'>

      <table id='employee-table' class="table table-hover">

        <thead class="thead-light">
        <tr>
          <th style="text-align: left;">ID</th>
          <th style="text-align: left;">Descripción</th>
          <th style="text-align: center;">Likes</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody>
        <% @images.each do |image| %>

          <tr>
            <td style="text-align: center;">
              <%#= link_to image.id, edit_image_path(image) %>
              <%= link_to image.id, image %>
            </td>

            <td style="text-align: left;">
              <%#= link_to image.description, edit_image_path(image) %>
              <%= link_to image.description, image %>
            </td>

            <td style="text-align: center;">
              <%#= link_to image.likes_counter, edit_image_path(image) %>
              <%= link_to image.likes_counter, image %>
            </td>

            <td><%= link_to 'Edit', edit_image_path(image) %></td>
            <td><%= link_to 'Delete', image, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>

        <% end %>
        </tbody>

      </table>

      <br>

    </div>

  </div>

</div>



