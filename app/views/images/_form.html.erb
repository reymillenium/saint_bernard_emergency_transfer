<div class="form-group">

  <%#= form_for @image do |f| %>
  <%= form_for @image, :html => {:multipart => true} do |f| %>
    <%= f.label :picture %>
    <br>
    <%#= f.file_field :picture %>
    <%#= f.file_field :picture, multiple: true %>

    <%= f.text_field :picture, class: 'form-control'  %>
    <%#= f.text_field(:image, :picture) %>
    <%#= f.file_field :picture, accept: 'image/png,image/jpeg', multiple: true %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_field :description, class: 'form-control' %>
    <br>
    <%= f.label :likes_counter %>
    <br>
    <%= f.number_field :likes_counter, class: 'form-control', :min => 0 %>
    <br>
    <%= f.submit 'Enviar', :class => 'btn btn-primary' %>
    <br>
  <% end %>

</div>


