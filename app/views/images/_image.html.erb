<div class="col-lg-3">
  <figure class="figure">

    <img src="<%= image.picture %>" class="figure-img img-fluid img-rounded" width="250px" height="250px">
    <%#= image_tag image.picture.thumb.url %>
    <%#= image_tag image.picture.url, class: 'figure-img img-fluid img-rounded' %>
    <%#= image_tag image.picture(:thumb), class: 'figure-img img-fluid img-rounded' %>
    <%#= image_tag image.picture(:thumb) if image.picture? %>
    <%#= image_tag image.picture.url(:thumb), class: 'figure-img img-fluid img-rounded'%>

    <figcaption class="figure-caption"><%= link_to image.description, image %></figcaption>
    <figcaption class="figure-caption"><b>ID:</b> <%= image.id %>, <b>Likes:</b> <%= image.likes_counter %>

      <%= link_to 'Edit', edit_image_path(image) %>
      <%= link_to 'Delete', image, method: :delete, data: {confirm: 'Are you sure?'} %>
    </figcaption>
  </figure>
</div>